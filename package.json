{
  "name": "better-cmdk-mono",
  "private": true,
  "packageManager": "bun@1.3.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "typecheck": "turbo run typecheck",
    "dev:web": "turbo run dev --filter=@better-cmdk/web",
    "dev:docs": "turbo run dev --filter=@better-cmdk/docs",
    "build:web": "turbo run build --filter=@better-cmdk/web",
    "build:pkg": "turbo run build --filter=better-cmdk"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.0",
    "turbo": "^2.8.3",
    "typescript": "^5.9.3"
  }
}
